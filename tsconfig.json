// tsconfig.json

{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "paths": {
      "@context/*": ["./src/context/*"],
      "@navigation/*": ["./src/components/navigation/*"],
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"],
      "@assets/*": ["./assets/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@common/*": ["./src/common/*"],
      "@constants/*": ["./src/constants/*"],
      "@theme/*": ["./src/theme/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@test-utils/*": ["./src/test-utils/*"],
      "@mocks/*": ["./__mocks__/*"],
      "@store/*": ["./src/store/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "jest.config.js",
    "src/constants/react-native-dotenv.d.ts",
    "jest/androidUtils.js",
    "src/store/testRedux.js",
    "__mocks__/@env.js"
  ]
}
