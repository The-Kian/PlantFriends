{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
        "@context/*": ["./src/context/*"],
        "@navigation/*": ["./src/navigation/*"],
        "@screens/*": ["./src/screens/*"],
        "@components/*": ["./src/components/*"],
        "@utils/*": ["./src/utils/*"],
        "@types/*": ["./src/types/*"],
        "@assets/*": ["./assets/*"],
        "@hooks/*": ["./src/hooks/*"],
        "@common/*": ["src/common/*"],
        "@constants/*": ["./src/constants/*"],
        "@theme/*": ["./src/theme/*"],
        "@helpers/*": ["./src/helpers/*"],
      }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
